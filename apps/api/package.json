{
  "name": "api.dionysus.club",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "clear": "shx rm -r ./dist",
    "build": "tsup",
    "build:clean": "pnpm clear && pnpm build",
    "start": "cross-env NODE_PATH=dist node dist/index.js",
    "tsc": "tsc --noEmit",
    "db:pull": "drizzle-kit introspect && pnpm db:pull:after",
    "db:pull:after": "prettier ./db/migrations -w",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx ./db/seed.ts",
    "db:test": "tsx ./db/test.ts",
    "db:check": "drizzle-kit check",
    "migration:gen": "drizzle-kit generate",
    "migration:gen:mty": "drizzle-kit generate --custom",
    "migration:drop": "drizzle-kit drop",
    "prettier": "prettier . --write"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@repo/dtos": "workspace:^",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.1",
    "hono": "^4.7.4",
    "pg": "^8.14.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "drizzle-seed": "^0.3.1",
    "nodemon": "^3.1.9",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2"
  }
}
